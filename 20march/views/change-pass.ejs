<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="author" content="Yinka Enoch Adedokun">
        <meta name="description" content="Simple Forgot Password Page Using HTML and CSS">
        <meta name="keywords" content="forgot password page, basic html and css">
        <title>Forgot Password Page </title>
        <link rel="stylesheet" href="/forgetpass.css">
    </head>
    <body>
        <div class="row">
            <h1>Change Your Password</h1>
            <h6 class="information-text">Enter New pass and confirm pass!</h6>
            <form action="/save-pass" id="form" method="post" onsubmit="return validate()">
            <div class="form-group">
                <input type="password" placeholder="Enter New Password" name="newpass" id="pass">
                <input type="password" placeholder="Enter Confirm Password" id="cpass">
                <button type="submit">Change Password</button>
            </div>
        </form>
        <h2 id="err"></h2>
        </div>
    </body>
    <script>
        const err = document.getElementById('err');
       
        function validate(){
            const password = document.getElementById('pass').value;
            const cpassword = document.getElementById('cpass').value;
            var passw = /^(?=.*[-\#\$\.\%\&\@\!\+\=\\*])(?=.*[a-zA-Z])(?=.*\d).{6,12}$/;
            if(password !== cpassword){
                err.innerHTML = 'Password did not matched!';
                err.style.color = "red";
                return false
            } 
            if( password.length < 6){
                err.innerHTML = 'password must be 6 character long!';
                err.style.color = "red";
                return false;
            }
            if( password === ""){
                err.innerHTML = 'password must requred!';
                err.style.color = "red";
                return false;
            }
            if(!password.match(passw)) {
            document.getElementById("err").innerHTML = "**password should contain latters,numbers and specialchar"
            return false;
            }
            if(password === cpassword){
                err.innerHTML = 'Password Matched!';
                err.style.color = "green";
                return true;
            }
            
        }
    </script>
</html>